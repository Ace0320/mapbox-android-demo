<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Set the starting camera position and map style using xml-->
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="45.5076"
        mapbox:mapbox_cameraTargetLng="-122.6736"
        mapbox:mapbox_cameraZoom="14"
        />

    <Button
        android:id="@+id/redo_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/mapboxPurpleDark"
        android:elevation="4dp"
        android:padding="16dp"
        android:text="@string/redo_search_button"
        android:textColor="@color/mapboxWhite"
        android:visibility="visible" />

</FrameLayout>